  <% @transactions.each do |transaction| %>
  <div class="col-lg-3">
    <div class="card">
    <img class="nvt-img m-1 p-1" src="<%= transaction.nvt.picture%>" alt="<%= transaction.nvt.title%>" style="width:321px">
      <div class="card-body">
          <h2><%= link_to transaction.nvt.title, transaction_path(transaction) %></h2>
            <div class="d-flex">
            <p>Comment: <%= transaction.comment %> </p>
            <div class="price"> <br>
              <p><%= transaction.nvt.price %> â‚½/NVT</p>
            </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
