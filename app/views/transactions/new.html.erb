<div class="transaction-form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-med-8">
      <div class="transaction-form-title">
        <h3><%= current_user.username %>, Get the <%= @nvt.title %>!</h3>
      </div>
      <div class="transaction-form-new">
        <%= simple_form_for [@nvt, @transaction] do |f| %>
          <%= f.input :status, label: "Status", as: :integer, input_html: {class: "datepicker"} %>
          <%= f.input :comment, label: "Comment", as: :text %>
          <%= f.submit "Buy!", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div style="margin-top: 25px; margin-bottom:25px">
        <hr>
      </div>
      <div class="transaction-show-host-info">
        <p>Hosted by add link</p>
      </div>
    </div>
  </div>
</div>
